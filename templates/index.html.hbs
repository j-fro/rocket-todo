<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Todo List</title>
    <link rel="stylesheet" href="/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/master.css">
    <script src="scripts/vendors/jquery.min.js" charset="utf-8"></script>
    <script src="scripts/client.js" charset="utf-8"></script>
</head>

<body>
    <h1>Todo List</h1>
    <form class="" action="" method="post">
        <input type="text" name="name" placeholder="Add new task">
        <input id="idIn" type="number" name="id" value="0">
        <input type="hidden" name="complete" value="off">
        <input type="checkbox" name="complete" value="on">
        <input type="submit" value="Submit">
    </form>
    <ul>
        {{#each this as |t|}}
            <li data-id="{{t.id}}"><span class="name">{{t.name}}</span>
                {{#if t.complete}}
                    <button class="complete-button" data-complete="true">
                        <i class="fa fa-check-square-o"></i>
                    </button>
                {{else}}
                    <button class="complete-button" data-complete="false">
                        <i class="fa fa-square-o"></i>
                    </button>
                {{/if}}
                <button class="delete-button"><i class="fa fa-times"></i></button>
            </li>
        {{/each}}
    </ul>
</body>

</html>
